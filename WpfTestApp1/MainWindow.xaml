<Window x:Class="WpfTestApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfTestApp1"
              xmlns:ViewModel="clr-namespace:WpfTestApp1.MVVM.ViewModel"
             xmlns:View="clr-namespace:WpfTestApp1.MVVM.View"
        mc:Ignorable="d"
        Height="650" 
        Width="920" 
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        WindowStyle="None"
        ResizeMode="CanMinimize" >


    <Window.DataContext>
        <ViewModel:MainViewModel></ViewModel:MainViewModel>
    </Window.DataContext>
    
    <Border 
        CornerRadius="5"
        Background="#272537">

        <Grid>
            
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="75"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>


            <TextBlock Text="Smachew" VerticalAlignment="Center" Foreground="WhiteSmoke" HorizontalAlignment="Center"/>


            <StackPanel Grid.Row="1">
                <RadioButton Content="Home" Height="50" Foreground="WhiteSmoke" 
                             FontSize="14" Style="{StaticResource MenuButtonTheme}"></RadioButton>

                <RadioButton Content="Categories" Height="50" Foreground="WhiteSmoke" 
                             FontSize="14" Style="{StaticResource MenuButtonTheme}"></RadioButton>

            </StackPanel>


            <ContentControl Grid.Row="1" 
                            Grid.Column="1" 
                            Margin="10"
                            Content="{Binding CurrentView}"></ContentControl>
        </Grid>


        
        
        

    </Border>
</Window>
